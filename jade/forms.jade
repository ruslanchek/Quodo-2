extends ./layout.jade

block content
	- var section = 'forms'

	.grid
		.col-6
			include ./partials/leftcol.jade

		.col-18
			h1 Forms
			p The forms with a lot of shapes

			.grid
				.col-9
					h2 Horizontal
					form.form
						.input
							label(for="name-1") Name
							input#name-1(type="text", tabindex="1")

						.input
							label(for="email-1") E-mail
							input#email-1(type="email", tabindex="2")

						.input
							label(for="realm-1", tabindex="3") Realm
							select#realm-1
								option North America
								option Europe
								option Asia
								option Oceania
								option South Africa

						.input
							label(for="remember-1") Remember me
							input#remember-1(type="checkbox", tabindex="4")

						button.button.fat.bg-neutral-light(type="submit") Login

				.col-8
					h2 Vertical
					form.form.horizontal
						.input
							label(for="name-2") Name
							input#name-2(type="text", tabindex="11")

						.input
							label(for="email-2") E-mail
							input#email-2(type="email", tabindex="12")

						.input
							label(for="realm-2", tabindex="13") Realm
							select#realm-2
								option North America
								option Europe
								option Asia
								option Oceania
								option South Africa

						.input
							label(for="remember-2") Remember me
							input#remember-2(type="checkbox", tabindex="14")

						button.button.fat.bg-neutral-light(type="submit") Login