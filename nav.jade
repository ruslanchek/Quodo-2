extends ./layout.jade

block content
	- var section = 'nav'

	.grid-row
		.col-6
			include ./partials/leftcol.jade

		.col-18
			h1 Horizontal navigation
			p Can be bordered, filled or simple inline links

			nav.nav.fat.horizontal.bordered
				a.active(href="#stayhere") Letter
				a(href="#stayhere") Word
				a(href="#stayhere") Expression
				a(href="#stayhere") Article
				a(href="#stayhere") Tale

			br

			nav.nav.fat.horizontal.filled.bg-bittersweet-light
				a(href="#stayhere") Letter
				a(href="#stayhere") Word
				a.active(href="#stayhere") Expression
				a(href="#stayhere") Article
				a(href="#stayhere") Tale
			br

			nav.nav.fat.horizontal.text-center
				a(href="#stayhere") Letter
				a(href="#stayhere") Word
				a(href="#stayhere") Expression
				a(href="#stayhere") Article
				a.active(href="#stayhere") Tale


			br
			.grid-row
				.col-9
					include partials/code
				.col-9.text-right
					include partials/paintable
					include partials/resizeable

			hr

			h1 Vertical navigation
			p Can be bordered, filled or simple inline links

			.grid-row
				.col-6
					nav.nav.fat.bordered
						a.active(href="#stayhere") Letter
						a(href="#stayhere") Word
						a(href="#stayhere") Expression
						a(href="#stayhere") Article
						a(href="#stayhere") Tale
				.col-6
					nav.nav.fat.filled.bg-lavender-light
						a(href="#stayhere") Letter
						a(href="#stayhere") Word
						a.active(href="#stayhere") Expression
						a(href="#stayhere") Article
						a(href="#stayhere") Tale

				.col-6
					nav.nav.fat
						a(href="#stayhere") Letter
						a(href="#stayhere") Word
						a(href="#stayhere") Expression
						a(href="#stayhere") Article
						a.active(href="#stayhere") Tale

			br
			.grid-row
				.col-9
					include partials/code

				.col-9.text-right
					include partials/paintable
					include partials/resizeable