extends ./layout.jade

block content
	- var section = 'nav'

	.grid-row
		.col-3
			include ./partials/leftcol.jade

		.col-9
			h1 Navigation
			p Can be vertical or horizontal, bordered, filled or simple inline links

			h2 Vertical
			.grid-row
				.col-3
					nav.nav.fat.bordered
						a(href="#stayhere") Letter
						a(href="#stayhere") Word
						a(href="#stayhere") Expression
						a(href="#stayhere") Article
						a(href="#stayhere") Tale
				.col-3
					nav.nav.fat.filled
						a(href="#stayhere") Letter
						a(href="#stayhere") Word
						a(href="#stayhere") Expression
						a(href="#stayhere") Article
						a(href="#stayhere") Tale
				.col-3
					nav.nav.fat
						a(href="#stayhere") Letter
						a(href="#stayhere") Word
						a(href="#stayhere") Expression
						a(href="#stayhere") Article
						a(href="#stayhere") Tale

			br

			h2 Horizontal
			nav.nav.fat.horizontal.filled
				a(href="#stayhere") Letter
				a(href="#stayhere") Word
				a(href="#stayhere") Expression
				a(href="#stayhere") Article
				a(href="#stayhere") Tale
			br

			nav.nav.fat.horizontal.bordered
				a(href="#stayhere") Letter
				a(href="#stayhere") Word
				a(href="#stayhere") Expression
				a(href="#stayhere") Article
				a(href="#stayhere") Tale
			br

			nav.nav.fat.horizontal
				a(href="#stayhere") Letter
				a(href="#stayhere") Word
				a(href="#stayhere") Expression
				a(href="#stayhere") Article
				a(href="#stayhere") Tale
			br