extends ./layout.jade

block content
	- var section = 'grid'

	.grid-row
		.col-6
			include ./partials/leftcol.jade

		.col-18
			h1 JavaScript API
			p The API will make you happy


			a(name="Animate")
			h2 UI.Animate
			code.code-multiline: pre
				|var Animate = new UI.Animate({
				|	$element: $('#my-animated-element'),
				|	duration: 500
				|})

			br

			p.bullet
				code Animate.play(animationMethod, onDone)
				br
				|Will apply an animation method on the $element, that pointed when you construct UI.Animate()


			a(name="ClickOutside")
			h2 UI.ClickOutside
			code.code-multiline: pre
				|var ClickOutside = new UI.ClickOutside({
				|	$element: $('#my-element'),
				|	onClickOutside: function($target){
				|		
				|	}
				|})

			br

			p.bullet
				code ClickOutside.bind()
				br
				|Activate the click outside listener

			p.bullet
				code ClickOutside.unbind()
				br
				|Deactivate the click outside listener