extends ./layout.jade

block content
	- var section = 'grid'

	.grid-row
		.col-6
			include ./partials/leftcol.jade

		.col-18
			h1 JavaScript API
			p The API will make you happy

			h2 UI.Animate
			code.code-multiline: pre
				|var Animate = new UI.Animate($element, duration)

			br
			br

			code.bullet Animate.fadeIn(onDone)
			p Simple fading in animation

			code.bullet Animate.fadeOut(onDone)
			p Simple fading out animation

			code.bullet Animate.appear(onDone)
			p Complex fading in animation

			code.bullet Animate.disappear(onDone)
			p Complex fading out animation


			h2 UI.ClickOutside
			code.code-multiline: pre
				|var ClickOutside = new UI.ClickOutside($container, function($target){})

			code.bullet ClickOutside.bind()
			p Activate the click outside listener

			code.bullet ClickOutside.unbind()
			p Deactivate the click outside listener

			br
			.grid-row
				.col-9
					include partials/code