extends ./layout.jade

block content
	- var section = 'grid'

	.grid-row
		.col-6
			include ./partials/leftcol.jade

		.col-18
			h1 Grid
			p Simple grid system of 24 cols, nesting supports

			table#table-sample
				thead
					tr
						th
						th Make
						th Model
						th Horsepower
						th Top speed
						th Price
				tbody
					tr
						td 1
						td Audi
						td A5 3.2 Quattro
						td 350
						td 250 km/h
						td $69 000
					tr
						td 2
						td BMW
						td 335i xDrive
						td 300
						td 250 km/h
						td $71 000
					tr
						td 3
						td Mercedes Benz
						td E 320 AMG
						td 298
						td 250 km/h
						td $70 000
					tr
						td 4
						td Infiniti
						td Q50 Eau rouge
						td 500
						td 280 km/h
						td $100 000
				tfoot
					tr
						td.text-right(colspan="5") Total
						td $1 290 000

			.checkers
				a.rounded.bg-aqua-light(href="#") Rounded
				a.striped(href="#") Striped
				a.hovered(href="#") Hovered
				a.bordered(href="#") Bordered
				a.bordered-rows-h(href="#") Horizontal borders
				a.bordered-rows-v(href="#") Vertical borders


			br
			.grid-row
				.col-9
					include partials/code