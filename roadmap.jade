extends ./layout.jade

block content
	- var section = 'roadmap'

	mixin feature(state, text)
		if state
			.bullet.bg-grass-light
				span.text-fade= text
		else
			.bullet.bg-medium-gray-light= text

	.grid-row
		.col-6
			include ./partials/leftcol.jade

		.col-18
			h1 Roadmap
			p A place, where we solve the problems and making new things

			+feature(true, 'Fade effect on wait animation of the Popup')
			+feature(true, 'Timeout for popup wait method')
			+feature(false, 'Wireframed navigation')
			+feature(false, 'Tabs navigation')
			+feature(false, 'Breadcrumbs')
			+feature(false, 'Pagination')